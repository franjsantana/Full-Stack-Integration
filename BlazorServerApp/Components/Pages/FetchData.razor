@page "/fetch"
@inject CacheService CacheService;

<h3>Weather Data</h3>

<p>@WeatherData</p>

@code {
    private string WeatherData = string.Empty;

    protected override void OnInitialized()
    {
        WeatherData = CacheService.GetOrCreate("weatherData",
        () => "Sample weather data", // En una aplicación real, reemplazarías esa línea por una llamada real a una base de datos
                                     // o API externa
        TimeSpan.FromMinutes(5));
    }
}

