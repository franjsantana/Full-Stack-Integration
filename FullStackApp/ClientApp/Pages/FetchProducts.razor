@page "/fetchproducts"
@inject HttpClient Http

<h3>Product List</h3>

@if (isLoading)
{
    <p><em>Loading products...</em></p>
}
else if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger" role="alert">
        <strong>Error:</strong> @errorMessage
    </div>
    <button class="btn btn-primary" @onclick="RetryLoadProducts">Retry</button>
}
else if (products != null && products.Length > 0)
{
    <ul>
        @foreach (var product in products)
        {
            <li>@product.Name - $@product.Price (Stock: @product.Stock)</li>
        }
    </ul>
}
else
{
    <p><em>No products available.</em></p>
}

@code {
    private Product[]? products;
    private bool isLoading = false;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadProducts();
    }

    private async Task LoadProducts()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            // Configure timeout for the HTTP request
            using var cts = new CancellationTokenSource(TimeSpan.FromSeconds(10));

            products = await Http.GetFromJsonAsync<Product[]>(
            "http://localhost:5186/api/productlist",
            cts.Token);
        }
        catch (TaskCanceledException)
        {
            errorMessage = "Request timed out. The server took too long to respond.";
        }
        catch (HttpRequestException ex)
        {
            errorMessage = $"Network error: {ex.Message}. Please check if the server is running.";
            Console.WriteLine($"[ERROR] HTTP Request failed: {ex}");
        }
        catch (Exception ex)
        {
            errorMessage = $"Unexpected error: {ex.Message}";
            Console.WriteLine($"[ERROR] Unexpected error: {ex}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task RetryLoadProducts()
    {
        await LoadProducts();
    }

    public class Product
    {
        public int Id { get; set; }
        public string Name { get; set; } = string.Empty;
        public double Price { get; set; }
        public int Stock { get; set; }
    }
}
